{% style %}
  .hero {
    width: 100vw;
    position: absolute;
    display: flex;
    z-index: 1;
  }

  .bg-overlay {
    height: 100%;
    width: 100%;
    background-color: {{settings.color_dark}};
    position: absolute;
    opacity: 0.8;
    z-index: 2;
    pointer-events: none;
  }

  .hero-content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0 1.5rem;
    position: absolute;
    top: var(--navbar-height);
    z-index: 3;
  }

  .hero-content.container {
    display: flex;
    flex-direction: column;
    height: calc(100vh - var(--navbar-height));
  }

  .hero-bg {
    position: fixed;
    top: var(--navbar-height);
    left:0;
    width: 100%;
    height: calc(100vh - var(--navbar-height));
    background: url({{section.settings.hero_bg_image | image_url }});
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    z-index: 1;
    transform: translateZ(0)
  }

  @media screen and (min-width: {{settings.breakpoint_md}}px) {
    .hero-content.container {
      flex-wrap: wrap;
      flex-direction: row;
    }

    .hero-content {
      padding: 2rem;
      column-gap: 10rem;
      flex-direction: row;
      flex-wrap: wrap;
    }
  }

  @media screen and (min-width: {{settings.breakpoint_lg}}) {
    .hero-content {
      column-gap: 3rem;
    }
  }
{% endstyle %}

<section class="hero-section full-width">
  <div
    class="hero"
    style="display: flex; justify-content: center;"
  >
    <div class="hero-bg full-width">
      <div class="bg-overlay full-width"></div>
    </div>
    <div class="hero-content container">
      {% content_for 'blocks' %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_bg_image",
      "label": "Hero Background Image"
    }
  ],
  "blocks": [{ "type": "@theme" }],
  "presets": [
    {
      "name": "Hero Section"
    },
    {
      "name": "Hero Column"
    },
    {
      "name": "Hero Row"
    }
  ]
}
{% endschema %}
