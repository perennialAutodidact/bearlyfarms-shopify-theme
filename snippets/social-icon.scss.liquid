{% style %}

  .social-icon {
    position: relative;
    height: {{ block.settings.size }}px;
    width: {{ block.settings.size }}px;
    z-index: 10;

    span {
      border: 2px solid red;
    }
  }

  .social-icon .layer {
    height: 100%;
    width: 100%;
    position: absolute;
  }
  .social-icon .layer:nth-child(1) {
    z-index:11;
    left: -5;
    svg {

        color: {{settings.color_primary_900}};
    }
  }
  .social-icon .layer:nth-child(2) {
    z-index: 12;
    left: -10px;
    color: {{settings.color_primary_500}};
  }

  .social-icon .layer:nth-child(3) {
    color: {{settings.color_light}};
    z-index: 13;
  }
{% endstyle %}
