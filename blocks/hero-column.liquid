<style>
  .hero-column {
    width: 100%;
    padding-top: 0;
    display: flex;
    flex: 0 0 50vw;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  @media screen and (min-width: {{settings.breakpoint_md}}px) {
    .hero-column {
      flex: 1 0 auto;
    }
  }

  @media screen and (min-width: {{settings.breakpoint_lg}}px) {
    .hero-column {
      padding-top: 3rem;
    }
  }

  @media screen and (min-width: {{settings.breakpoint_xl}}px) {
    .hero-column {
      min-width: 0;
      height: 60vh;
      padding-top: 5rem;
      flex: 1 1 0;
      align-items: stretch;
      justify-content: flex-end;
      text-align: left;
    }
  }
</style>

{% content_for 'blocks' %}

{% schema %}
{
  "name": "Hero Column",
  "blocks": [{ "type": "@theme" }],
  "class": "hero-column",
  "settings": [],
  "presets": [
    {
      "name": "Hero Column",
      "blocks": [{ "type": "logo-header-group" }, { "type": "heading" }, { "type": "button" }]
    }
  ]
}
{% endschema %}
