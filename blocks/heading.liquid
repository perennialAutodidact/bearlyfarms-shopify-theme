{% style %}
  .heading {
    width: 80%;
    color: {{settings[block.settings.color]}};
    letter-spacing: 2px;
    margin-bottom: 2rem;
    display: flex;
    justify-content:center;
  }

  @media screen and (min-width: {{ settings.breakpoint_lg }}px) {
    .heading h1 {
      font-size: 3rem;
    }
  }

  @media screen and (min-width: {{settings.breakpoint_xl}}px) {
    .heading {
      justify-content: flex-start;
    }
  }
{% endstyle %}

{% if block.settings.tag.first == 'd' %}
  {% assign tag = 'h1' %}
{% else %}
  {% assign tag = block.settings.tag %}
{% endif %}

<{{ tag }} class="{{tag}}">
  {{ block.settings.text }}
</{{ tag }}>

{% schema %}
{
  "name": "Heading",
  "class": "heading",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Heading Level",
      "options": [
        {
          "label": "Display 6",
          "value": "d6"
        },
        {
          "label": "Heading 1",
          "value": "h1"
        },
        {
          "label": "Heading 2",
          "value": "h2"
        },
        {
          "label": "Heading 3",
          "value": "h3"
        },
        {
          "label": "Heading 4",
          "value": "h4"
        },
        {
          "label": "Heading 5",
          "value": "h5"
        },
        {
          "label": "Heading 6",
          "value": "h6"
        }
      ]
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color",
      "default": "color_light",
      "options": [
        {
          "label": "Light",
          "value": "color_light"
        },
        {
          "label": "Dark",
          "value": "color_dark"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Heading"
    }
  ]
}
{% endschema %}
