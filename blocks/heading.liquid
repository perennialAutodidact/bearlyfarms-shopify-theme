{% style %}
  .heading {
    width: 100%;
    color: {{settings[block.settings.color]}};
    letter-spacing: 2px;
    margin-bottom: 2rem;
  }
{% endstyle %}

{% assign tag = block.settings.tag %}

<{{ tag }}>
  {{ block.settings.text }}
</{{ tag }}>

{% schema %}
{
  "name": "Heading",
  "class": "heading",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Heading Level",
      "options": [
        {
          "label": "Heading 1",
          "value": "h1"
        },
        {
          "label": "Heading 2",
          "value": "h2"
        },
        {
          "label": "Heading 3",
          "value": "h3"
        },
        {
          "label": "Heading 4",
          "value": "h4"
        },
        {
          "label": "Heading 5",
          "value": "h5"
        },
        {
          "label": "Heading 6",
          "value": "h6"
        }
      ]
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color",
      "default": "color_light",
      "options": [
        {
          "label": "Light",
          "value": "color_light"
        },
        {
          "label": "Dark",
          "value": "color_dark"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Heading"
    }
  ]
}
{% endschema %}
