{% style %}
  .logo-header-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    flex: 1 1 0;
  }
{% endstyle %}

<div class="logo-header-group">
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Logo Header Group",
  "blocks": [{ "type": "@theme" }],
  "settings": [],
  "presets": [
    {
      "name": "Logo Header Group",
      "blocks": [{ "type": "logo-image" }, { "type": "triple-decker-header" }, { "type": "social-icons" }]
    }
  ]
}
{% endschema %}
